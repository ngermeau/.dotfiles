[user]
	name = Nicolas Germeau
	email = nicolas.germeau@gmail.com

[color]
  ui = auto

[alias]
  st = status
  co = commit --verbose
  ch = checkout
  chb= checkout -b
  di = diff
  dic = diff --cached
  coa = commit --amend

[merge]
  tool = vimdiff [filter "lfs"]
  trustExitCode = true

[credential]
  helper = cache

[core]
  editor = vim
	autocrlf = input
