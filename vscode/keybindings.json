// Place your key bindings in this file to override the defaults
[
    // up,down in suggestions 
    {
        "key": "ctrl+j",
        "command": "selectNextSuggestion",
        "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "selectPrevSuggestion",
        "when": "editorTextFocus && suggestWidgetMultipleSuggestions && suggestWidgetVisible"
    },
    // up,down in file nav
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenNavigateNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenNavigatePrevious",
        "when": "inQuickOpen"
    },
    // up,down,left,righ windows nav 
    {
        "key": "ctrl+j",
        "command": "workbench.action.navigateDown",
        "when": "!inQuickOpen && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.navigateUp",
        "when": "!inQuickOpen && !suggestWidgetMultipleSuggestions && !suggestWidgetVisible"
    },
    {
        "key": "ctrl+h",
        "command": "workbench.action.navigateLeft",
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.navigateRight",
    },
    // disable ctrl+w in vim (windows move) to allow close in vscode
    {
        "key": "ctrl+w",
        "command": "-extension.vim_ctrl+w",
        "when": "editorTextFocus && vim.active && vim.use<C-w> && !inDebugRepl"
    },
    // quick open 
    {
        "key": "ctrl+u ctrl+u",
        "command": "workbench.action.quickOpen"
    },
    // navigate tabs 
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.nextEditor"
    },
    {
        "key": "ctrl+shift+i",
        "command": "workbench.action.previousEditor"
    },
    // navigate between terminals
    {
        "key": "ctrl+shift+i",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+shift+o",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus && terminalProcessSupported"
    },
    // show all commands
    {
        "key": "ctrl+u ctrl+j",
        "command": "workbench.action.showCommands"
    },
    // handle error navigations
    {
        "key": "ctrl+m ctrl+m",
        "command": "editor.action.marker.next",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+m ctrl+n",
        "command": "editor.action.marker.prev",
        "when": "editorFocus"
    },
    // toggle side bar
    {
        "key": "ctrl+g",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    // format document 
    {
        "key": "ctrl+t",
        "command": "editor.action.formatDocument",
        "when": "editorHasDocumentFormattingProvider && editorTextFocus && !editorReadonly && !inCompositeEditor"
    },
    // navigate split editor 
    {
        "key": "ctrl+a ctrl+v",
        "command": "workbench.action.splitEditor"
    },
    {
        "key": "ctrl+a ctrl+s",
        "command": "workbench.action.splitEditorOrthogonal"
    },
]